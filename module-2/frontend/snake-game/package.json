{
  "name": "snake-game-multiplayer",
  "version": "1.0.0",
  "description": "Multiplayer snake game with leaderboard and spectator mode",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "serve": "python3 -m http.server 8000",
    "start:backend": "cd backend && uv run python -m uvicorn main:app --port 8000",
    "start:frontend": "npm run serve",
    "dev": "concurrently -k -n backend,frontend \"npm: start:backend\" \"npm: start:frontend\""
  },
  "keywords": [
    "snake",
    "game",
    "multiplayer"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "concurrently": "^7.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "dependencies": {
    "pyodide": "^0.29.0"
  }
}
